  public static bool GetPass(int[] arr, int password)
  {
      // בודקים אם הסיסמה כבר קיימת במערך
      for (int i = 0; i < arr.Length; i++)
      {
          if (arr[i] == password)
              return false;   
      }

      // לולאה שמתחילה מהאחרון ומזיזה כל סיסמה תא אחד ימינה
      for (int i = arr.Length - 1; i > 0; i--)
      {
          arr[i] = arr[i - 1];   // כל תא מקבל את הערך של התא שמאלו
      }

      // מכניסים את הסיסמה החדשה בתא הראשון
      arr[0] = password;

      return true;  
  }
